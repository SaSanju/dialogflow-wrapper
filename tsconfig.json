{
  "compilerOptions": {
    "target": "ES6",                  // Specify ECMAScript target version
    "module": "commonjs",              // Use commonjs for Node.js support
    "declaration": true,               // Generate declaration files (.d.ts)
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./src",                // Root directory of source files
    "strict": true,                    // Enable strict type-checking
    "esModuleInterop": true,           // Allow ES module imports
    "skipLibCheck": true,              // Skip type checks for libraries
    "moduleResolution": "node",        // Node-style module resolution
    "resolveJsonModule": true          // Allow importing of JSON modules
  },
  "include": ["src/**/*"],             // Include all files in the src directory
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist directories
}
